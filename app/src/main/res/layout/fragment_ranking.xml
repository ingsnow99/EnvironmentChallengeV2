<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".ui.ranking.RankingFragment">

    <TextView
        android:id="@+id/text_ranking"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/world_ranking_title"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="32dp"
        android:background="@color/LabelColor"
        android:fontFamily="casual"
        android:text="World"
        android:textAlignment="center"
        android:textColor="@color/MyTextColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_ranking"
        android:layout_width="270sp"
        android:layout_height="35sp"
        android:background="@color/MyTextColor"
        android:fontFamily="casual"
        android:text="4325th Joseph Chong"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/world_ranking_title"
        app:layout_constraintStart_toStartOf="@+id/world_ranking_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <TextView
        android:id="@+id/button_label"
        android:layout_width="350dp"
        android:layout_height="50sp"
        android:layout_marginTop="32dp"
        android:background="@color/LabelColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/world_ranking_title"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/world_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="World"
        android:textColor="@color/MyTextColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_label"
        app:layout_constraintEnd_toStartOf="@+id/friend_btn"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="@+id/button_label"
        app:layout_constraintTop_toTopOf="@+id/button_label" />

    <Button
        android:id="@+id/friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:fontFamily="casual"
        android:text="Friend"
        android:textColor="@color/MyTextColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_label"
        app:layout_constraintEnd_toEndOf="@+id/button_label"
        app:layout_constraintTop_toTopOf="@+id/button_label" />

</androidx.constraintlayout.widget.ConstraintLayout>